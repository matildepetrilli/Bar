@model List<Bar.Models.CarrelloItem>

@{
    ViewData["Title"] = "Il tuo Carrello";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info">
            Il carrello è vuoto. <a asp-action="Index">Torna al menù</a>
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Prodotto</th>
                    <th>Quantità</th>
                    <th>Prezzo Unitario</th>
                    <th>Totale</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Prodotto.Nome</td>
                        <td>@item.Quantita</td>
                        <td>@item.Prodotto.Prezzo.ToString("C")</td>
                        <td>@((item.Prodotto.Prezzo * item.Quantita).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot class="table-group-divider">
                <tr>
                    <td colspan="3" class="text-end fw-bold">Totale:</td>
                    <td class="fw-bold">@Model.Sum(i => i.Prodotto.Prezzo * i.Quantita).ToString("C")</td>
                </tr>
            </tfoot>
        </table>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-primary">Continua a comprare</a>
            <a href="#" class="btn btn-success">Procedi al pagamento</a>
        </div>
    }
</div>
@{
}

@model List<Bar.Models.Categoria>

@{
    ViewData["Title"] = "Menù del Bar";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

@foreach (var categoria in Model)
{

    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h2>@categoria.Nome</h2>
            <p class="mb-0">@categoria.Descrizione</p>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach (var prodotto in categoria.Prodotti)
                {
                    <div class="col-md-6 mb-3">
                        <div class="card h-100 prodotto-card">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@prodotto.Nome</h5>
                                <p class="card-text flex-grow-1">@prodotto.Descrizione</p>
                                <p class="text-success fw-bold">@prodotto.Prezzo.ToString("C")</p>
                                <a href="#" class="btn btn-primary mt-auto btn-animated">Ordina ora</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    }

